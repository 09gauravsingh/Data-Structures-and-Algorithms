from typing import List


def maxProfit(prices: List[int]) -> int:
     total_profit = 0
     for i in range(1, n):
          if prices[i] > prices[i-1]:
               total_profit += prices[i] - prices[i-1]
          else:
               total_profit += 0
     return total_profit          


if __name__ == '__main__':
    n = int(input())
    prices = input().split()
    prices = [int(i) for i in prices]
    result = maxProfit(prices)
    print(result)


  
